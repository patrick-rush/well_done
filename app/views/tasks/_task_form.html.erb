<%= form_for task do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.label :title %> 
  <%= f.text_field :title %> <br>
  <%= f.label :due_date %> 
  <%= f.date_field :due_date %> <br>
  <% if task.project_id %>
    <%= f.hidden_field :project_id, value: task.project_id %>
    <%= f.hidden_field :nested_route, value: true %>
  <% else %>
    <%= f.label :project_id, "Project" %>
    <%= f.collection_select :project_id, projects, :id, :title %> <br>
  <% end %>
  <%= f.submit %>
<% end %>