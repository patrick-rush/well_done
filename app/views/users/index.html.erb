<% @users.each do |user| %>
    <h3><%= link_to "#{user.full_name}", user_path(user) %></h3>
    <% if current_user.is_friends_with?(user) %>
        <%= link_to "Remove #{user.full_name} as a friend", friendship_path(user.id), method: "delete" %> <br><br>
    <% else %>
        <%= link_to "Add #{user.full_name} as a friend", friendships_path(friend_id: user.id), method: "post" %> <br><br>
    <% end %>
<% end %>
